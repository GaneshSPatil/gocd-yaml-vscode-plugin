{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "The Environments Schema",
	"required": [
		"format_version",
		"environments"
	],
	"properties": {
		"format_version": {
			"$id": "#/properties/format_version",
			"type": "integer",
			"title": "The Format Version is the version of the specified yaml configuration",
			"default": 3,
			"examples": [
				1,
				2,
				3
			]
		},
		"environments": {
			"$id": "#/properties/environments",
			"type": "object",
			"title": "The GoCD Environments Object Schema",
			"required": [
				"^(label_name_[0-9]+)+$"
			],
			"properties": {
				"^(label_name_[0-9]+)+$": {
					"$id": "#/properties/environments/properties/environment_spec",
					"type": "object",
					"title": "The Environment Object Schema",
					"required": [
						"secure_variables",
						"pipelines"
					],
					"properties": {
						"environment_variables": {
							"$id": "#/properties/environments/properties/testing/properties/environment_variables",
							"type": "object",
							"title": "The Environment Variables Schema",
							"properties": {
								"^(label_name_[0-9]+)+$": {
									"$id": "#/properties/environments/properties/testing/properties/environment_variables/properties/environment_variable_name",
									"type": "string",
									"title": "The Environment Variable Key",
									"default": "",
									"pattern": "^(.*)$"
								}
							}
						},
						"secure_variables": {
							"$id": "#/properties/environments/properties/testing/properties/secure_variables",
							"type": "object",
							"title": "The Secure Environment Variables Schema",
							"properties": {
								"^(label_name_[0-9]+)+$": {
									"$id": "#/properties/environments/properties/testing/properties/secure_variables/properties/secure_environment_variable_name",
									"type": "string",
									"title": "The Secure Environment Variable Key",
									"default": "",
									"pattern": "^(.*)$"
								}
							}
						},
						"pipelines": {
							"$id": "#/properties/environments/properties/testing/properties/pipelines",
							"type": "array",
							"title": "The Pipelines Belonging to an environment",
							"items": {
								"$id": "#/properties/environments/properties/testing/properties/pipelines/items",
								"type": "string",
								"title": "The Items Schema",
								"default": "pipeline1",
								"pattern": "^(.*)$"
							}
						}
					}
				}
			}
		}
	}
}